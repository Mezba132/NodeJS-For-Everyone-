<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/additem.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <form class="product-form" action="/admin/edit-item" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= item.title %>">
        </div>
        <div class="form-control">
            <label for="imgUrl">Images</label>
            <input type="text" name="imgUrl" id="imgUrl" value="<%= item.imgUrl %>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= item.price %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea type="text" name="description" id="description" rows="5" ><%= item.description %></textarea>
        </div>

        <button class="btn" type="submit">Update Item</button>
    </form>
</main>

<%- include('../includes/end.ejs') %>